<h1><%= t("definitions_edit") %>: "<%= h @definition.name %>"</h1>
<% fonct = "edit" %>
<% form_for(@definition, :html => { :id => 'definition_form' }) do |f| %>
<%= f.error_messages %>
<%= render(:partial => "shared/menu_edit", :locals => {:object => @definition, :f => f, :fonct => fonct }) %>
<%= render(:partial => "definitions/edit", :locals => {:object => @definition, :f => f, :fonct => fonct }) %>
<%= render(:partial => "shared/submit_edit", :locals => {:object => @definition, :f => f, :fonct => fonct }) %>
<% end %>
<%= render_fluo :definition => @definition %>
