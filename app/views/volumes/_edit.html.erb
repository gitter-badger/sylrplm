<fieldset>
	<legend>
		<%= t(:legend_volume) %>
	</legend>
	<input type="hidden" name="olddir" value="<%= @volume.directory %>"/>
	<%= f.label t(:label_name) %>
	<%= f.text_field :name , :readonly=>(fonct=="edit" && !admin_logged_in?)%>
	<br/>
	<%= f.label t(:label_directory) %>
	<%= f.text_field :directory , :readonly=>(fonct=="edit" && !admin_logged_in?)%>
	<br/>
	<%= f.label t(:label_protocol) %>
	<% if fonct=="edit" && !admin_logged_in? %>
	<%= f.text_field :protocol , :readonly=>(true) %>
	<% else %>
	<%= f.select( :protocol, Volume.protocol_values) %>
	<% end %>
	<br/>
	<%= f.label t(:label_encode) %>
	<%= f.text_area :encode %>
	<br/>
	<%= f.label t(:label_decode) %>
	<%= f.text_area :decode %>
	<br/>
	<%= f.label t(:label_compress) %>
	<%= f.text_area :compress %>
	<br/>
	<%= f.label t(:label_decompress) %>
	<%= f.text_area :decompress %>
	<br/>
	<%= f.label t(:label_description) %>
	<%= f.text_area :description %>
	<br/>
	<%= f.label t(:label_volume_groups) %>
	<%= select_inout(f, @volume, Group.all, :name) %>
	<%= h_input_text(f ,:domain) %>
	<br />
</fieldset>
