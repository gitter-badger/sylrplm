<h1><%= t(:questions_list) %><%= h_count_objects(@faqs) %></h1>
<%= h_form_simple_query('/questions', @faqs) %>
<table class='menu_bas'>
	<tr>
		<td> <%= link_to t(:new_question), new_question_path %> </td>
		<td> <%= show_help("help_questions") %> </td>
	</tr>
</table>
<%= will_paginate(@faqs[:recordset]) %>
<table>
	<tr>
		<th> <%= t(:label_asker) %> </th>
		<th> <%= t(:label_question) %> </th>
		<th> <%= t(:label_responder) %> </th>
		<th> <%= t(:label_answer) %> </th>
		<th></th>
		<th></th>
	</tr>
	<% @faqs[:recordset].each do |question| %>
	<tr class='<%= cycle("even", "odd") %>'>
		<td> <%= h_explorer question.asker, :login unless question.asker.nil? %> </td>
		<td> <%= h_explorer question, :question %> </td>
		<td> <%= h_explorer question.responder, :login unless  question.responder.nil? %> </td>
		<td> <%= h question.answer %> </td>
		<td> <%= link_to h_img_edit.to_s, edit_question_path(question) %> </td>
		<td> <%= h_destroy(question) %> </td>
	</tr>
	<% end %>
</table>
<%= will_paginate(@faqs[:recordset]) %>
<table class='menu_bas'>
