<fieldset>
	<legend>
		<%= t(:legend_question) %>
	</legend>
	<%= f.label t(:label_question) %>
	<% if fonct== "new"%>
	<%= f.text_field :question %>
	<%else%>
	<%= f.text_field :question %>
	<%end%>
	<br/>
	<%= f.label t(:label_answer) %>
	<% if fonct== "edit"%>
	<%= f.text_field :answer %>
	<%else%>
	<%= f.text_field :answer %>
	<%end%>
	<br/>
	<%= hidden_field_tag "question[asker_id]" , @faq.asker_id %>
	<%= f.label t(:label_asker) %>
	<%= text_field_tag :asker, @faq.asker.login, :readonly => true unless @faq.asker.nil? %>
	<br/>
	<%= f.label t(:label_responder) %>
	<% unless @faq.responder.nil? %>
	<%= hidden_field_tag "question[responder_id]", @faq.responder_id %>
	<%= text_field_tag :responder, @faq.responder.login, :readonly => true  %>
	<% else %>....
	<%end%>
	<br/>
	<br/>
	<%= f.label t(:label_domain) %>
	<%= f.text_field :domain %>
	<br/>
</fieldset>
