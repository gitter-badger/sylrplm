<% h_title t(:connect) %>

<% form_for :session, url: { controller: :sessions, action: :create} do |form| %>
<%= form.error_messages %>
<fieldset>
	<legend>
		<%= t(:legend_login) %>
	</legend>
	<p>
		<%= form.label t(:label_login) %>
		<%= form.text_field :login %>
	</p>
	<p>
		<%= form.label t(:label_password) %>
		<%= form.password_field :password %>
	</p>
	<p><%= form.label "" %><%= link_to t(:submit_new_account), new_account_path%> </p>
	<table class='menu_bas'>
		<tr>
			<td> <%= submit_tag t(:submit_account) %> </td>
		</tr>
	</table>		
<!-- <%= render(:partial => "users/index",:locals => { :fonct => "new_session"}) %> -->
</fieldset>
<% end %>