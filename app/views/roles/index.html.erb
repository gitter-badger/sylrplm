<h1><%= t(:role_list) %><%= h_count_objects(@roles) %></h1>
<%= h_form_simple_query('/roles', @roles) %>
<%= form_tag({:controller=>:roles, :action=>:index_execute}) do %>
<%= h_menu_index_action("role")%>
<%= will_paginate(@roles[:recordset]) %>
<table>
	<tr>
		<th <%= sort_td_class_helper "title" %>> <%= sort_link_helper t("label_name"), "title" %></th>
		<th> <%= t(:label_description) %> </th>
		<th> <%= t(:label_role_father) %> </th>
		<th> <%= t(:label_role_users) %> </th>
		<th></th>
		<th></th>
	</tr>
	<% @roles[:recordset].each do |role| %>
	<tr class='<%= cycle("even", "odd") %>'>
		<td><%= h_explorer role, :title %><%= h_show_translate role.title_translate %></td>
		<td> <%= role.description %> </td>
		<td><%= h_explorer role.father, :name unless role.father.nil?%><%= h_show_translate role.father.title_translate unless role.father.nil? %></td>
		<td> <%= h_explorer role.father, :title_translate unless role.father.nil? %>
		<td><%= comma_links(role.users, :login) %></td>
		<td> <%= link_to h_img_edit.to_s, edit_role_path(role) %> </td>
		<td> <%= link_to h_img(:duplicate), new_dup_role_path(role) %> </td>
		<td> <%= h_destroy(role) %> </td>
		<td><%= check_box(:action_on,role.id) %></td>
	</tr>
	<% end %>
</table>
<%= will_paginate(@roles[:recordset]) %>
<%= h_menu_index_action("role")%>
<%end%>
