<p>
	<b><%= t(:label_ident)%><</b>
	<%= h @object.ident %>
</p>

<p>
	<b><%= t(:label_type)%><</b>
	<% if(@object.typesobject != nil) %>
	<%= h @object.typesobject.id %>:<%= h @object.typesobject.name %>
	<% end %>
</p>

<p>
	<b><%= t(:label_designation)%><</b>
	<%= h @object.designation %>
</p>

<p>
	<b><%= t(:label_description)%><</b>
	<%= h @object.description %>
</p>

<p>
	<b><%= t(:label_status)%><</b>
	<% if(@object.statusobject != nil) %>
	<%= h @object.statusobject.id %>:<%= h @object.statusobject.name %>
	<% end %>
</p>

<p>
	<b><%= t(:label_responsible)%><</b>
	<%= h @object.owner.login %>
</p>

<p>
	<b><%= t(:label_date)%><</b>
	<%= h @object.date %>
</p>

