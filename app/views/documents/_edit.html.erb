<%= puts "document.view._edit:document=#{object.inspect}" %> <h1><%= t(:legend_document) %></h1>
<%= h_edit_type_object(f, object, @types) %>
<%= f.label t("label_ident") %>
<%= f.text_field :ident , :readonly => object.column_readonly?(:ident) %>
<br/>
<%= f.label t("label_revision") %>
<%= text_field_tag :revision, object.revision, :readonly => true %>
<br/>
<%= f.label t("label_designation") %>
<%= f.text_field :designation, :readonly => object.column_readonly?(:designation) %>
<br/>
<%= f.label t("label_description") %>
<%= h_text_editor f, object, :description%>
<br/>
<%= f.label t("label_responsible") %>
<%= select_in_list(:document, :owner, object.owner.login, :users) unless object.owner.nil?%>
<br/>
<%= f.label t("label_date") %>
<%= f.date_select :date %>
<br/>
<%= h_input_domain(f) %>
<%= h_type_values(object, fonct) %>

