<h1><%= t(:document_show) %></h1>
<% fonct="show" %>
<%= render(:partial => "shared/menu_show", :locals=>{:object => @object_plm, :fonct=>fonct}) %>
<%= form_for(@object_plm, :html => { :id => h_form_html_id(@object_plm, fonct) }) do |f| %>
<%= form_errors_for @object_plm %>
<p>
	<b><%= t(:label_ident) %></b>
	<%= h @object_plm.ident %>
</p>
<p>
	<b><%= t(:label_typesobject) %></b>
	<% if(@object_plm.typesobject != nil) %>
	<%= h @object_plm.typesobject.name_translate %>
	<% end %>
</p>
<p>
	<b><%= t(:label_revision) %></b>
	<%= h @object_plm.revision %>
</p>
<p>
	<b><%= t(:label_designation) %></b>
	<%= h @object_plm.designation %>
</p>
<p>
	<b><%= t(:label_description) %></b>
	<%= h @object_plm.description %>
</p>
<p>
	<b><%= t(:label_statusobject) %></b>
	<% if(@object_plm.statusobject != nil) %>
	<%= h @object_plm.statusobject.name_translate %>
	<% end %>
</p>
<p>
	<b><%= t(:label_next_status) %></b>
	<% unless @object_plm.next_status.nil?  %>
	<%= h @object_plm.next_status.name_translate %>
	<% end %>
</p>
<p>
	<b><%= t(:label_responsible) %></b>
	<%= h @object_plm.owner.login unless @object_plm.owner.nil? %>
</p>
<p>
	<b><%= t(:label_date) %></b>
	<%= l @object_plm.date unless @object_plm.date.nil? %>
</p>
<p>
	<b><%= t(:label_domain) %></b>
	<%= h @object_plm.domain %>
</p>
<%= h_type_values(@object_plm, fonct) %>
<% end %> <!-- form -->

<!-- workitems associated to the document -->
<%= render(:partial => "shared/object_workitems", :object => @object_plm)  %>

<%= render(:partial => "documents/check_document", :locals => {:document => @object_plm})  %>

<%= render(:partial => "shared/show_datafiles",
:locals=> {:plm_object => @object_plm,  :fonct => fonct, :document=>@object_plm, :part=>nil, :project=>nil, :customer=>nil}) %>

<%= render(:partial => "shared/objects_to_add", :object =>@object_plm) %>
<%= render(:partial => "shared/links_relation_tabs", :object =>@object_plm) %>

