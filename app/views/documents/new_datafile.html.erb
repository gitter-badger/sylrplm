<h1><%= t(:datafile_add) %></h1>
<% fonct="doc_new"%>
<% form_for @datafile, :html => { :multipart => true}, :url => { :action=>"add_datafile",:id=>@document.id }  do |f| %>
<%= f.error_messages %>
<%= hidden_field_tag "document_id", @document.id.to_s %>
<%= render(:partial => "datafiles/edit_datafile",:locals => { :f => f , :fonct=>fonct, :document=>@document}) %>
<%= render(:partial => "shared/submit_new", :locals => {:object => @datafile, :f => f, :fonct=>fonct}) %>
<%= render(:partial => "shared/menu_new", :locals => {:object => @document, :f => f, :fonct=>fonct}) %>
<% end %>