<h1><%= t(:column_new) %></h1>
<% fonct="new"
  form_id=fonct+"_ui_column" %>
<%= form_for(@ui_column, :html => { :id => form_id }) do |f| %>
<%= form_errors_for @ui_column %>
<%= render(:partial => "shared/menu_new", :locals => {:object => @ui_column, :f => f, :fonct=>fonct}) %>
<%= render(:partial => "ui_columns/edit",:locals => {:object => @ui_column,
:f => f,
:fonct => fonct,
:form_id => form_id })
%>
<%= render(:partial => "shared/submit_new", :locals => {:object => @ui_column, :f => f, :fonct=>fonct}) %>

<% end %>