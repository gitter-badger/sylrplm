<h1><%=t(:link_edit) %></h1>
<% fonct="edit"
  form_id=fonct+"_link" %>
<% form_for(@link, :html => { :id => form_id }) do |f| %>
<%= f.error_messages %>
<%= render(:partial => "shared/menu_edit",:locals => { :object => @link, :f => f, :fonct=>fonct}) %>
<%= render(
:partial => "links/edit",
:locals => {
:form => f,
:fonct => fonct,
:form_id => form_id }
) %>
<%= render(:partial => "shared/submit_edit",:locals => { :object => @link, :f => f, :fonct=>fonct}) %>

<% end %>