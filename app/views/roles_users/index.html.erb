<h1>Listing roles_users <%=h_count_objects(@roles_users)%> </h1>
<%= link_to 'New roles_user', new_roles_user_path %>
<%= h_form_simple_query('/roles_users', @roles_users) %>
<%= will_paginate(@roles_users[:recordset]) %>
<table>
  <tr>
    <th>Role</th>
    <th>User</th>
  </tr>

<% @roles_users.each do |roles_user| %>
 <tr class='<%= cycle("even", "odd") %>'>
    <td><%=h roles_user.role_id %></td>
    <td><%=h roles_user.user_id %></td>
    <td><%= link_to 'Show', roles_user %></td>
    <td><%= link_to 'Edit', edit_roles_user_path(roles_user) %></td>
    <td><%= link_to 'Destroy', roles_user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate(@roles_users[:recordset]) %>
