	<legend>
		<%= t(:legend_part) %>
	</legend>
	<%= f.label t(:label_ident) %>
	<%= f.text_field :ident %>
	<br/>
	<%= f.label t(:label_type) %>
	<%= f.collection_select(:typesobject_id, @types, :id, :name) %>
	<br/>
	<%= f.label t(:label_revision) %>
	<%= text_field_tag :revision, @part.revision, :disabled => true %>
