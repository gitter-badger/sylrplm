<h1><%= t(:datafile_add) %></h1>
<% fonct="doc_new"%>
<% form_for @datafile, :html => { :multipart => true}, :url => { :action=>"add_datafile",:id=>@part.id }  do |f| %>
<%= f.error_messages %>
<%= hidden_field_tag "part_id", @part.id.to_s %>
<%= render(:partial => "datafiles/edit_datafile",:locals => { :f => f , :fonct=>fonct, :document=>@part}) %>
<%= render(:partial => "shared/menu_new", :locals => {:object => @datafile, :f => f, :fonct=>fonct}) %>
<%= render(:partial => "shared/submit_new", :locals => {:object => @part, :f => f, :fonct=>fonct}) %>
<% end %>