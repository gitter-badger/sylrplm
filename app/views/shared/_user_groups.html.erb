
<table>
  <tr class="nhover">
    <td colspan="2"><%=t(:label_belongs_to)%></td>
  </tr>
<% for elt in in_elements %>
  <tr class='<%= cycle("even", "odd") %>'>
    <td><%= h elt.group.name %></td>
    <td> <%= link_to 'remove', elt, :confirm => 'Are you sure ?', :method => :delete %></td>
  </tr>
<% end %>
  <tr class="nhover">
    <td colspan="2">&nbsp;</td>
  </tr>
  <tr class="nhover">
    <td colspan="2"><%=t(:label_not_belongs_to)%></td>
  </tr>
<% for elt in out_elements %>
  <tr class='<%= cycle("even", "odd") %>'>
    <td><%= h elt.name %></td>
    <td> <%= link_to 'add', user_groups_path(:user_group => { :group_id => elt.id, :user_id => @current_user.id}), :method => :post %></td>
  </tr>
<% end %>
</table>

