
<table>
  <tr class="nhover">
    <td colspan="2"><%=t(:label_members)%></td>
  </tr>
<% for elt in in_elements %>
  <tr class='<%= cycle("even", "odd") %>'>
    <td><%= h elt.user.login %></td>
    <td> <%= link_to 'remove', elt, :confirm => 'Are you sure ?', :method => :delete %></td>
  </tr>
<% end %>
  <tr class="nhover">
    <td colspan="2">&nbsp;</td>
  </tr>
  <tr class="nhover">
    <td colspan="2"><%=t(:label_not_members)%></td>
  </tr>
<% for elt in out_elements %>
  <tr class='<%= cycle("even", "odd") %>'>
    <td><%= h elt.login %></td>
    <td> <%= link_to 'add', user_groups_path(:user_group => { :group_id => @group.id, :user_id => elt.id}), :method => :post %></td>
  </tr>
<% end %>
</table>

